@{
    ViewBag.Title = "Sign up for FREE TRIAL and tweak your targeting and preferences. Attract your ideal fan bases - Instagram 2021";
    ViewBag.description = "Sign up for FREE TRIAL and tweak your targeting and preferences. Attract your ideal fan bases - Instagram 2021";
    Layout = "~/Views/Shared/_Layout_LoggedInNewSP.cshtml";
}

<div class="breadcrumb--area bg-img bg-overlay jarallax" style="background-image: url('/Content/img/bg-img/12.jpg'); height:95px;">

</div>
<!-- Register Area-->
<div class="register-area pt-5 pb-5">
    <div class="container">
        <div class="row align-items-center justify-content-between">

            <div class="col-12 col-lg-6">
                <div class="card register-card bg-gray p-1 p-sm-4 mb-50">
                    <div class="card-body">
                        <h4>
                            Get your PIN code - Sign Up
                        </h4>
                        <p>Unlock your app to get up to 40 leads a day. </p>
                        <p>Already have an account?<a class="ml-2" href="/Account/Login">Log In</a></p>
                        <!-- Register Form-->
                        <div class="register-form my-2">
                            @using (Html.BeginForm("", "", FormMethod.Get, new { id = "Form_Signup" }))
                            {
                                <div class="form-group">
                                    <input class="form-control rounded-0" type="text" name="FirstName" value="" placeholder="First Name" required>
                                </div>
                                <div class="form-group">
                                    <input class="form-control rounded-0" type="text" name="EmailAddress" value="@ViewBag.email" id="SignEmailAddress" placeholder="Email" required>
                                </div>
                                <div class="form-group">
                                    <label class="label-psswd" for="registerPassword"><span class="hide">HIDE</span><span class="show">SHOW</span></label>
                                    <input class="input-psswd form-control rounded-0" name="Password" id="SignupPassword" type="password" placeholder="Password" psswd-shown="false" required>
                                </div>
                                <div class="form-group">
                                    <input class="form-control rounded-0" type="password" name="Re_Password" value="" placeholder="Confirm Password" required>
                                </div>

                                <div class="form-group" style="margin-bottom:0px;">
                                    <label class="error" id="signup-error"></label>
                                </div>
                            }

                            <button class="btn radix-btn white-btn w-100 btn_formSignup" type="button">Create  Account&nbsp; <span id="SignUpSpinner" style="display:none"><i class="fa fa-spinner fa-spin"></i></span></button>

                            <a class="btn radix-btn app-download-btn w-100 mt-2" style="background: #a883e9" href="https://connectwizz.co">Learn More </a>

                        </div>
                    </div>
                </div>
            </div>

            <div class="float-right col-12 col-lg-6">
                <div class="register-thumbnail mb-50">
                    <img src="~/Content/Images/sign-in-sign-up.jpeg" style="" />
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="border-top"></div>
</div>


