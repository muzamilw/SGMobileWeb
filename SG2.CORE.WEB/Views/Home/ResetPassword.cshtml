@model SG2.CORE.MODAL.ViewModals.Customers.ResetUserPasswordViewModel
@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="main">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <h2>Reset Password</h2>
            </div>
        </div>
    </div>
</div>

<div class="main">
    <div class="container">
        <div class="row">
            <div class="col-sm-8 col-xs-12">

                @using (Html.BeginForm("UpdateUserPassword", "Home", FormMethod.Post, new { @id = "Form_UpdatePassword" }))
                {
                    @Html.HiddenFor(model => model.CustomerId)

                    @*<div class="form-group">
                @Html.LabelFor(m => m.CurrentPassword, new { @class = "" })
                @Html.PasswordFor(m => m.CurrentPassword, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CurrentPassword, "", new { @class = "text-danger" })
            </div>*@
                    <div class="form-group">
                        @Html.LabelFor(m => m.Password, new { @class = "" })
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <div id="paslist" class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                            <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                                <ul class="validLeft">
                                    <li><i class="fa fa-circle passlisti"></i>One lowercase character</li>
                                    <li><i class="fa fa-circle passlisti"></i>One uppercase character</li>
                                    <li><i class="fa fa-circle passlisti"></i>One number</li>
                                </ul>
                            </div>
                            <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                                <ul class="validRight">
                                    <li><i class="fa fa-circle passlisti"></i>One special character</li>
                                    <li><i class="fa fa-circle passlisti"></i>8 character minimum</li>
                                    <li><i class="fa fa-circle passlisti"></i>50 character maximum</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Confirm_Password, new { @class = "" })
                        @Html.PasswordFor(m => m.Confirm_Password, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Confirm_Password, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <button id="btn_ResetPassword" type="button" class="btn btn-success btn_UpdatePassword" value="">
                            Reset Password
                        </button>
                    </div>

                }


            </div>
        </div>
    </div>
</div>

   


<style type="text/css">
    div#paslist ul li {
        margin: 10px 0;
        font-size: 1.4rem
    }

    div#paslist ul {
        margin: 34px 15px;
    }

    i.passlisti {
        margin-right: 10px;
        font-size: 10px;
        color: #5cb85c;
    }
</style>


@section scripts{
    <script type="text/javascript">
        $("document").ready(function () {

            
            $("#btn_ResetPassword").on("click", function () {
                

                if ($("#Form_UpdatePassword").valid()) {
                    
                    var data = $("#Form_UpdatePassword").serialize();
                    $.ajax({
                        type: "POST",
                        url: "/Home/UpdateUserPassword",
                        data: data,
                        dataType: "json",
                        success: function (data) {
                            if (!$.isEmptyObject(data)) {
                                if (data.ResultType == "Success") {
                                    $("#Modal_MessageBoxTitle").text("Message");
                                    $("#Modal_MessageBoxBody").text(data.message);
                                    $("#Modal_Messagebox").modal("show");
                                    $(location).attr('href', "/Home/PasswordUpdated");
                                } else {
                                    $("#Modal_MessageBoxTitle").text("Message");
                                    $("#Modal_MessageBoxBody").text(data.message);
                                    $("#Modal_Messagebox").modal("show");
                                }
                            }
                        },
                        failure: function (errMsg) {

                        }
                    });
                }

            });

       });
    </script>
}