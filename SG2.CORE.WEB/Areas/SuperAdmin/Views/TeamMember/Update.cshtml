@model SG2.CORE.MODAL.ViewModals.Backend.TeamMember.UpdateTeamMemberViewModal
@{
    ViewBag.Title = "Update Team member";
    Layout = "~/Areas/SuperAdmin/Views/Shared/_Layoutnew.cshtml";

    List<SelectListItem> rolesSelectList = new List<SelectListItem>();
    foreach (var item in Model.RoleListing)
    {
        rolesSelectList.Add(new SelectListItem { Text = item.RoleName, Value = item.SystemRoleId.ToString() });
    }
}

@section styles{
    <link href="~/Content/ThemeAssets/css/backendcss.css" rel="stylesheet" />
    <link href="~/Content/ThemeAssets/css/style.css" rel="stylesheet" type="text/css">
    <style>
        .text-danger {
            position: relative;
        }
    </style>
}
    }

@using (Html.BeginForm("Update", "TeamMember", FormMethod.Post, new { @class = "" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.SystemUserId)
    <!-- main sec start -->

    <div class="information-wrap main accounts">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="row">
                        <div class="left-col col-6">
                            <h2>Team members</h2>
                        </div>
                        <div class="right-col col-6 text-right">
                            <a class="btn btn-primary d-inline-block" href="javascript:void(0);" style="background-color:#52d234; position:relative; top:9px;" onclick="history.go(-1);"><i class="fa fa-backward"></i> Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="jv-box">
            <div class="accounts-form">
                <div class="row">
                    <div class="col-md-6 col-sm-6 col-xs-12">
                        <div class="col-12">
                            <label>Title</label>
                            <div class="select">
                                <select name="Title" id="Title" tabindex="1">
                                    <option>Select Title</option>
                                    <option value="MR" @(Model.Title == "MR" ? "selected='selected'" : "")>MR</option>
                                    <option value="MS" @(Model.Title == "MS" ? "selected='selected'" : "")>MS</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-12">
                            @Html.LabelFor(m => m.FirstName, new { @class = "" })
                            <div class="select">
                                @Html.TextBoxFor(m => m.FirstName, new { @class = "", tabindex = "3" })
                                @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-12">
                            @Html.LabelFor(m => m.Password, new { @class = "" })
                            <div class="select">
                                @Html.PasswordFor(m => m.Password, new { @class = "", tabindex = "5" })
                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-12">
                            <label>Role</label>
                            <div class="select">
                                @Html.DropDownListFor(m => m.SystemRoleId, rolesSelectList, "-- Select Role -- ", new { tabindex = "7" })
                                @Html.ValidationMessageFor(model => model.SystemRoleId, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 col-sm-6 col-xs-12 right">
                        <div class="col-12">
                            @Html.LabelFor(m => m.Email, new { @class = "" })
                            <div class="select">
                                @Html.TextBoxFor(m => m.Email, new { @class = "", tabindex = "2" })
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-12">
                            @Html.LabelFor(m => m.LastName, new { @class = "" })
                            <div class="select">
                                @Html.TextBoxFor(m => m.LastName, new { @class = "", tabindex = "4" })
                                @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-12">
                            @Html.LabelFor(m => m.Confirm_Password, new { @class = "" })
                            <div class="select">
                                @Html.PasswordFor(m => m.Confirm_Password, new { @class = "", tabindex = "6" })
                                @Html.ValidationMessageFor(model => model.Confirm_Password, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="col-12">
                            <label>Status</label>
                            <div class="select">
                                <select name="StatusId" id="Status" tabindex="8">
                                    <option>Select Status</option>
                                    <option value="21" @(Model.StatusId == 21 ? "selected='selected'" : "")>Invited</option>
                                    <option value="22" @(Model.StatusId == 22 ? "selected='selected'" : "")>Active</option>
                                    <option value="23" @(Model.StatusId == 23 ? "selected='selected'" : "")>Suspend</option>
                                    <option value="24" @(Model.StatusId == 24 ? "selected='selected'" : "")>Delete</option>
                                </select>
                            </div>
                        </div>

                        <div class="col-12">
                            <label>&nbsp;</label>
                            <div class="select">
                                <button type="submit" value="Save & Close" tabindex="9" class="btn btn-primary transition">Save & Close</button>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

}
<style type="text/css">
    input[type=text], input[type=password], input[type=email], textarea {
        margin-bottom: 0;
    }

    .information-wrap span {
        margin-top: 20px;
    }
</style>

@section scripts{

    <script type="text/javascript">
        $("document").ready(function () {
            $(document).on('click', '#backLink', function () {
                history.go(-1);
            });
        });
    </script>

}
