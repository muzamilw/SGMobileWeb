@model SG2.CORE.MODAL.ViewModals.Backend.TeamMember.TeamMemberPasswordDataViewModel
<h2>Change Password</h2>
<hr />

@using (Html.BeginForm("UpdateUserPassword", "UserProfile", FormMethod.Post, new { @id = "Form_UpdatePassword" }))
{
    @Html.AntiForgeryToken()
     @Html.HiddenFor(model => model.SystemUserId)
     @Html.HiddenFor(model=>model.VerifyPasswordValidation)

    @*<div class="form-group">
        @Html.LabelFor(m => m.CurrentPassword, new { @class = "" })
        @Html.PasswordFor(m => m.CurrentPassword, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.CurrentPassword, "", new { @class = "text-danger" })
    </div>*@
    <div class="form-group">
        @Html.LabelFor(m => m.Password, new { @class = "" })
        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
    </div>
    <div class="form-group" style="display:none">
        <div id="paslist" class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                <ul class="validLeft">
                    <li><i class="fa fa-circle passlisti"></i>One lowercase character</li>
                    <li><i class="fa fa-circle passlisti"></i>One uppercase character</li>
                    <li><i class="fa fa-circle passlisti"></i>One number</li>
                </ul>
            </div>
            <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                <ul class="validRight">
                    <li><i class="fa fa-circle passlisti"></i>One special character</li>
                    <li><i class="fa fa-circle passlisti"></i>8 character minimum</li>
                    <li><i class="fa fa-circle passlisti"></i>50 character maximum</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Confirm_Password, new { @class = "" })
        @Html.PasswordFor(m => m.Confirm_Password, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Confirm_Password, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <button type="button"  class="btn btn-success btn_UpdatePassword" >Update &nbsp;  <span id="Spiner" style="display:none"><i class="fa fa-spinner fa-spin"></i></span> </button>
       @* <input type="button" class="btn btn-success btn_UpdatePassword" value="Update" <span id="Spiner" style="display:none"><i class="fa fa-spinner fa-spin"></i></span>   />*@
    </div>

}


    <style type="text/css">
        div#paslist ul li {
            margin: 10px 0;
            font-size: 1.4rem
        }

        div#paslist ul {
            margin: 50px 15px;
        }

        i.passlisti {
            margin-right: 10px;
            font-size: 10px;
            color: #5cb85c;
        }

        .slct {
            margin-bottom: 14px
        }

        .information-form span.text-danger span {
            color: indianred;
        }
    </style>