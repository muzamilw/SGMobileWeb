                var editBlockId = $(this).attr("edit-block");
                $("#" + textBlockId).show();
                $("#" + editBlockId).hide();

                return false;
            });

            $(".btn_savedata").on("click", function (e) {
                e.preventDefault();
                e.stopPropagation();

