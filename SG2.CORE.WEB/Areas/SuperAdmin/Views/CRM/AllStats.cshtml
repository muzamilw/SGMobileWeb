        function kFormatter(num) {
            return (Math.abs(num) > 999 ? Math.sign(num) * ((Math.abs(num) / 1000).toFixed(1)) + 'k' : Math.sign(num) * Math.abs(num)).toString();
        }

        

        function LoadFollowersSection(mode,first) {

            
            if (performance.navigation.type == 1 && first) {
                if (mode == 1) {
                    var val = localStorage.getItem('followersMode');
                    if (val != undefined) {
                        mode = val;
                    }
                }
                
            } 
           
            localStorage.setItem('followersMode', mode);
           
            
            $.ajax({
                type: "GET",
                url: "/sadmin/crm/GetFollowersSection?socialProfileId=@socialProfile.SocialProfile.SocialProfileId&mode=" + mode,
                dataType: "json",
                success: function (Response) {


                    if (!$.isEmptyObject(Response)) {
                        if (Response.Data.ResultType == "Success") {
                            LoadFollowersLineChart(Response.Data);
                            LoadFollowersBarChart(Response.Data);
                            LoadFollowingLineChart(Response.Data);
                            LoadAverageLikesLineChart(Response.Data);
                            LoadPostBarChart(Response.Data);
                            LoadFollowersSectionData(Response.Data);
                        }
                    }
                },
                failure: function (errMsg) {
                    alert(errMsg);

                }
            });
        }

        function LoadEngagementSection(mode, first) {

            if (performance.navigation.type == 1 && first) {
                if (mode == 1) {
                    var val = localStorage.getItem('engagementMode');
                    if (val != undefined) {
                        mode = val;
                    }
                }

            }

            localStorage.setItem('engagementMode', mode);

            $.ajax({
                type: "GET",
                url: "/sadmin/crm/GetEngagementSection?socialProfileId=@socialProfile.SocialProfile.SocialProfileId&mode=" + mode,
                dataType: "json",
                success: function (Response) {

