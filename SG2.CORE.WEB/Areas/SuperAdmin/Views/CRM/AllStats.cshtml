            $('#filterrangetotalfollowes button').click(function () {
                $(this).addClass('active').siblings().removeClass('active');
                var mode = $(this).data("mode");
                LoadFollowersSection(mode,false);
            });

            $('#filterrangeengagement button').click(function () {
                $(this).addClass('active').siblings().removeClass('active');
                var mode = $(this).data("mode");
                LoadEngagementSection(mode, false);
            });
