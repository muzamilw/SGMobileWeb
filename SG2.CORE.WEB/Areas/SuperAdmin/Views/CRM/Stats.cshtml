            //});

            $("#line-followers").empty();

            Morris.Line({
                element: 'line-followers',
                data: morrisData,
                xkey: 'Date',
                ykeys: ['Followers'],
                labels: ['Followers'],
                resize: true,
                smooth: false,
                pointSize: 3,
                pointStrokeColors: ['#FF4558'],
                gridLineColor: '#e3e3e3',
                behaveLikeLine: true,
                numLines: 6,
                gridtextSize: 14,
                lineWidth: 3,
                hideHover: 'auto',
