                                }
                                <li>
                                    <a href="@ViewBag.BaseUrl/UserProfile/updateuserprofile?id=@Url.Encode(CryptoEngine.Encrypt(userDto.SystemUserId.ToString()))" class="transiton">@userDto.UserName</a>

                                    <a href="@ViewBag.BaseUrl/account/logout" class="btn_logout">
