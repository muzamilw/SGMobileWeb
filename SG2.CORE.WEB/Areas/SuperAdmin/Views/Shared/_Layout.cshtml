    @RenderSection("StyleSheet", false)
    <style>
        .nav > li > a.btn_logout {
            font-size: 2rem;
            top: 6px;
            position: relative;
            padding-left: 5px;
            display: inline;
            border-left: 1px solid lightgray;
            margin-left: 5px;
        }

        .navbar-inverse {
            background-color: #FFf;
            border-bottom: 1px solid #eeeeee;
            box-shadow: 3px 0px 5px #555;
        }

            .navbar-inverse .navbar-nav > li > a:hover, .navbar-inverse .navbar-nav > li > a:focus {
                color: #5cb85c;
                background-color: transparent;
            }

            .navbar-inverse .navbar-brand {
                color: #5cb85c;
            }

                .navbar-inverse .navbar-brand:hover, .navbar-inverse .navbar-brand:focus {
                    color: #666;
                    background-color: transparent;
                }

            .navbar-inverse .navbar-toggle {
                border-color: #5cb85c;
                background-color: #5cb85c;
            }

                .navbar-inverse .navbar-toggle:hover, .navbar-inverse .navbar-toggle:focus {
                    background-color: #5cb85c;
                }

        .nav > li > a:focus, .nav > li > a:hover {
            background-color: transparent;
            border-bottom: 2px solid #5cb85c;
            color: #5cb85c
        }

        ul.nav {
            margin-right: 10px;
            margin-right: 18px;
        }

        .nav > li {
            padding: 0 10px;
        }

            .nav > li > a:focus, .nav > li > a {
                font-size: 1.6rem;
                font-weight: 500;
                color: #333;
                text-align: center;
                cursor: pointer;
                min-width: 50px;
                padding: 10px 5px;
            }

        .header .right-sec a.transiton {
            height: 50px;
            width: 54px;
            /* display: inline; */
            line-height: 30px;
        }

        @@media screen and (min-width: 769px) {
            .mobile-menu {
                display: none;
            }
        }

        @@media screen and (max-width: 768px) {
            .mobile-menu {
                display: inline;
                float: right;
            }

            .menu {
                display: none;
                margin-bottom: 0px;
                margin-top: 0px;
            }

            .header .right-sec {
                text-align: left;
                float: inherit;
                width: 98%;
                top: 7px;
                position: absolute;
                background-color: #6e6e6e;
                margin: 0;
                padding: 15px 0px;
                z-index: 1;
            }

            .navbar-nav {
                width: 100%;
            }

                .navbar-nav > li {
                    float: none;
                }

            .nav > li > a:focus, .nav > li > a {
                color: #fff;
                text-align: left
            }
        }
        
        .btn-height47 {
            height: 47px;
            font-weight: 400;
            padding-top:13px;
            /*width:80px;*/
        }

        .btn {
            font-size: 14pt;
        }

        .form-group {
            float: none;
            margin-bottom: 0%;            
        }

    </style>

</head>
<body>
