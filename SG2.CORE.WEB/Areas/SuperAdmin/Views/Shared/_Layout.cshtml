                                }
                                else if (userDto.UserRoleName == "Manager")
                                {
                                    <li>@Html.ActionLink("Dashboard", "Index", "Dashboard", null, htmlAttributes: new { @class = ViewBag.SetMenuActiveClass == "Dashboard" ? "active" : "" })</li>
                                    <li>@Html.ActionLink("Trello", "Index", "ActionBoard", null, htmlAttributes: new { @class = ViewBag.SetMenuActiveClass == "ActionBoard" ? "active" : "" })</li>
                                    <li>@Html.ActionLink("CRM", "Index", "CRM", null, htmlAttributes: new { @class = ViewBag.SetMenuActiveClass == "CRM" ? "active" : "" })</li>



                                    @*<li>@Html.ActionLink("Likies", "Index", "LikeAccts", null, htmlAttributes: new { @class = ViewBag.SetMenuActiveClass == "LikeAccts" ? "active" : "" })</li>*@
                                }
                                else if (userDto.UserRoleName == "Sales")
